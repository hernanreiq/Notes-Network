<%- include('partials/head') %>
<%- include('partials/header') %>
<main>
    <div class="container p-4 mt-3">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header card-header-form">
                    <h2 class="text-center">Edit this note</h2>
                </div>
                <div class="card-body card-body-form">
                    <form action="/note/edit/<%= note._id %>?_method=PUT" method="POST" autocomplete="off" id="note-update">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="title" class="shadow form-control" required placeholder="Title" autofocus value="<%= note.title %>"> 
                        </div>
                        <div class="form-group">
                            <textarea name="description" class="shadow form-control" required placeholder="Description"><%= note.description %></textarea>
                        </div>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text font-weight-bold bg-dark text-light" for="Visibility">Visibility</label>
                            </div>
                            <select class="custom-select shadow" name="visibility" id="Visibility">
                                <% if(note.visibility){ %>
                                    <option value="Private">Private</option>
                                    <option value="Public" selected>Public</option>
                                <% } else {%>
                                    <option value="Private" selected>Private</option>
                                    <option value="Public">Public</option>
                                <% } %>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="card-footer card-footer-form">
                    <a href="/user/profile/<%= note.user_id %>" class="btn btn-profile d-block my-1">Back to profile</a>
                    <button type="submit" class="btn btn-send my-1 w-100 shadow" form="note-update">Update this note</button>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('partials/footer') %>