<%- include('partials/head') %>
<%- include('partials/header') %>
<main>
    <div class="container p-4 mt-3">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-header card-header-form">
                    <h2 class="text-center">Update my profile</h2>
                </div>
                <div class="card-body card-body-form">
                    <form action="/user/update/<%= user._id %>?_method=PUT" method="POST" autocomplete="off" id="user-name-update">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="text" name="name" class="my-2 shadow form-control" required placeholder="Name" autofocus value="<%= user.name %>"> 
                            <button class="btn btn-send w-100 mt-0 mb-2" type="submit" form="user-name-update">CHANGE MY NAME</button>
                        </div>
                    </form>
                    <form action="/user/update/<%= user._id %>?_method=PUT" method="POST" autocomplete="off" id="user-email-update">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="email" name="email" class="my-2 shadow form-control" required placeholder="Email" value="<%= user.email %>"> 
                            <button class="btn btn-send w-100 mt-0 mb-2" type="submit" form="user-email-update">CHANGE MY EMAIL</button>
                        </div>
                    </form>
                    <form action="/user/update/<%= user._id %>?_method=PUT" method="POST" autocomplete="off" id="user-password-update">
                        <input type="hidden" name="_method" value="PUT">
                        <div class="form-group">
                            <input type="password" name="password" class="my-2 shadow form-control" required placeholder="Current password"> 
                            <input type="password" name="new_password" class="my-2 shadow form-control" required placeholder="New password"> 
                            <input type="password" name="new_password_confirm" class="my-2 shadow form-control" required placeholder="Confirm the new password"> 
                            <button class="btn btn-send w-100 mt-0 mb-2" type="submit" form="user-email-update">CHANGE MY PASSWORD</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer card-footer-form">
                    <a href="/user/profile/<%= user._id %>" class="btn btn-clean d-block">BACK TO PROFILE</a>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('partials/footer') %>