<%- include('partials/head') %>
<%- include('partials/header') %>
<main>
    <div class="container p-5">
        <%- include('partials/error') %>
        <%- include('partials/success') %>
        <h2 class="text-center text-light">Hi! <%= user.name %> <i class="far fa-hand-peace"></i></h2>
        <div class="row my-5">
            <div class="col-md-6 offset-md-3">
                <div class="card shadow h-100">
                    <div class="card-header card-header-main">
                        <h2 class="mb-0 text-center text-light h1-main card-title">This is your data</h2>
                    </div>
                    <div class="card-body card-body-form text-light">
                        <h3><b>Name: </b><%= user.name %></h3>
                        <h3><b>Email: </b><%= user.email %></h3>
                        <h3><b>Account created: </b><%= format(user.created_at) %></h3>
                    </div>
                    <div class="card-footer card-footer-main">
                        <a href="/user/changes/<%= user._id %>" class="btn btn-send d-block">Change my data</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<%- include('partials/footer') %>